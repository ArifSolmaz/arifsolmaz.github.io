<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>SpotLightCurve Report</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        margin: 2rem auto;
        max-width: 900px;
        line-height: 1.6;
        color: #1a1a1a;
      }
      h1, h2 {
        color: #0c3c78;
      }
      table {
        border-collapse: collapse;
        width: 100%;
        margin-bottom: 2rem;
      }
      th, td {
        border: 1px solid #d5d5d5;
        padding: 0.5rem 0.75rem;
        text-align: left;
      }
      th {
        background-color: #f3f7fb;
      }
      .figures img {
        max-width: 100%;
        margin-bottom: 1.5rem;
      }
      footer {
        margin-top: 2rem;
        font-size: 0.85rem;
        color: #555;
      }
    </style>
  </head>
  <body>
    <h1>SpotLightCurve Analysis Report</h1>
    <section>
      <h2>Run Metadata</h2>
      <table>
        <tbody>
          {% for key, value in metadata.items() %}
          <tr>
            <th>{{ key }}</th>
            <td>{{ value }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </section>

    <section>
      <h2>Parameter Summary</h2>
      <table>
        <thead>
          <tr>
            <th>Parameter</th>
            <th>Value</th>
          </tr>
        </thead>
        <tbody>
          {% for key, value in parameters.items() %}
          <tr>
            <td>{{ key }}</td>
            <td>{{ value }}</td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </section>

    {% if figures %}
    <section class="figures">
      <h2>Figures</h2>
      {% for title, path in figures.items() %}
      <figure>
        <figcaption>{{ title }}</figcaption>
        <img src="{{ path }}" alt="{{ title }}" />
      </figure>
      {% endfor %}
    </section>
    {% endif %}

    <footer>
      Generated by SpotLightCurve.
    </footer>
  </body>
</html>
